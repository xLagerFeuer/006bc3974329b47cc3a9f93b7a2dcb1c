// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  password  String?
  img       String?   @default("")
  provider  Provider?
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  roles     Role[]
  Token     Token[]

  @@map("users")
}

model Token {
  token     String   @unique
  exp       DateTime
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  userAgent String   @map("user_agent")

  @@map("tokens")
}

enum Role {
  ADMIN
  USER
}

enum Provider {
  GOOGLE
  YANDEX
}

model Worker {
  id         String   @id @default(uuid())
  img        String
  firstName  String
  lastName   String
  email      String   @unique
  phone      String
  telegram   String
  whatsapp   String
  position   String
  about      String
  experience String
  date       DateTime
}

model Vacancy {
  id          String       @id @default(uuid())
  companyName String
  jobTitle    String
  count       String
  location    String
  workTime    String
  salary      String
  date        DateTime
  description String
  type        VacancyType
}

enum VacancyType {
  LOW
  HIGH
}

model Shift {
  id           String   @id @default(uuid())
  start        DateTime
  end          DateTime
  name         String
  progress     Int
  type         String
  hideChildren Boolean
  displayOrder Int
}

model Interview {
  id     String   @id @default(uuid())
  text   String
  count  String
  date   DateTime
}
